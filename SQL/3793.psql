WITH aggregations AS (
    SELECT
        user_id,
        COUNT(*) AS prompt_count,
        ROUND(AVG(tokens), 2) AS avg_tokens
    FROM prompts
    GROUP BY user_id
)

SELECT
    DISTINCT
    a.*
FROM prompts p
RIGHT JOIN aggregations a
    ON p.user_id = a.user_id
WHERE prompt_count >= 3
    AND p.tokens > a.avg_tokens
ORDER BY
    avg_tokens DESC,
    user_id ASC
